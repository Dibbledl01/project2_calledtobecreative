<div id="post-show-content">

<% if notice.present? %>
<p class="alert alert-info">
<%= notice %>
</p>
<% end %>
</div>

<p>
  <h2>
    <div id="heart">
      <%= form_for(Heart.new) do |f|%>
      <%= f.hidden_field :post_id, value: @post.id %>
      <%= f.submit "â™¥", class: "btn btn-danger" %>
      <% end %>
    </div>
    <%= @post.title %>


  </h2>
</p>

<p>
  <%= simple_format @post.content %>
</p>

<p class="text-muted">
  <small>
    Posted on  <%= @post.created_at.to_formatted_s(:long) %>
  </small>

  <small>
    <%= pluralize(@post.hearts.count, "heart") %>
  </small>

</p>
</div>
